<%- include('../partials/header.ejs') %>

<main>
    <div class="main_box">
    <form method="POST" action="/available_sessions/<%=session.id%>?_method=PUT">
        <ul>
            <li>
                <label for="type">Dance Type:</label>
                <input type="text" id="type" name="category" value="<%=session.category%>">
            </li>
            <li>
                <label for="style">Session Title:</label>
                <input type="text" id="style" name="title" value="<%=session.title%>">
            </li>
            <li>
                <label for="date">When:</label>
                <input type="date" id="date" name="date" value="<%=session.date%>" >
            </li>
            <li>
                <label for="start_time">Start:</label>
                <input type="time" id="start_time" name="start_time" value="<%=session.start_time%>">
            </li>
            <li>
                <label for="end_time">End:</label>
                <input type="time" id="end_time" name="end_time" value="<%=session.end_time%>">
            </li>
            <li>
                <label for="location">Meeting Location:</label>
                <input type="text" id="location" name="meeting_location" value="<%=session.meeting_location%>">
            </li>
            <li>
                <label for="address">Formal Adress:</label>
                <input type="text" id="address" name="address" value="<%=session.address%>">
            </li>
            <li>
                <label for="image">Image URL:</label>
                <input type="text" id="image" name="image" value="<%=session.image%>">
            </li>
            <li>
                <label for="detail">Details:</label>
                <textarea id="detail" name="details"><%=session.details%>"</textarea>
            </li>
            <li class="button">
                <button>SUBMIT DANCE SESSION</button> 
            </li>
        </ul>
    </form>
    </div>
  </main>

  <%- include('../partials/footer.ejs') %>